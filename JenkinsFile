pipeline {
	agent any

	tools {
		maven "Maven"
	}

	stages {
        stage('Checkout'){
            steps{
            git 'https://github.com/Divy2711/E-commerce-web-app.git'
            }
        }
		stage('Build'){
			steps {
                
				sh 'mvn clean package'
			}
		}

		stage('Test'){
			steps{
				sh 'mvn test'
			}
		}

		

		stage('Deploy') {
			steps {
			   echo "Deployment completed"
		  }

            post{
                success{
                    archiveArtifacts artifacts: 'target/*.war', followSymlinks: false, onlyIfSuccessful: true
                }
            }
		}

	}
}
